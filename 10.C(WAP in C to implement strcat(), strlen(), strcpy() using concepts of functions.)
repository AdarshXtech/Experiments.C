#include <stdio.h>

int mystrlen(char s[]) {
    int i = 0;
    while(s[i] != '\0')
        i++;
    return i;
}

void mystrcpy(char dest[], char src[]) {
    int i = 0;
    while(src[i] != '\0') {
        dest[i] = src[i];
        i++;
    }
    dest[i] = '\0';
}

void mystrcat(char s1[], char s2[]) {
    int i = 0, j = 0;
    while(s1[i] != '\0')
        i++;
    while(s2[j] != '\0') {
        s1[i] = s2[j];
        i++;
        j++;
    }
    s1[i] = '\0';
}

int main() {
    char str1[100], str2[100], copy[100];
    int len;

    printf("Enter first string: ");
    gets(str1);
    printf("Enter second string: ");
    gets(str2);

    len = mystrlen(str1);
    printf("\nLength of first string = %d", len);

    mystrcpy(copy, str1);
    printf("\nCopied string = %s", copy);

    mystrcat(str1, str2);
    printf("\nConcatenated string = %s", str1);

    return 0;
}
